#!/usr/bin/env bash
# This script checks if the file "school" exists and what type it is

if [ -e school ]; then
    echo "school file exists"
    if [ -f school ]; then
        echo "school is a regular file"
        if [ -s school ]; then
            echo "school file is not empty"
        else
            echo "school file is empty"
        fi
    elif [ -d school ]; then
        echo echo "school exists but it is a directory"
    fi
else
    echo "school file does not exist"
fi
